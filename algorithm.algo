ALGORITHM phrase
VAR
 p:CHAR
 n:INTEGER :=0  /* nombre de caractères */
 v:INTEGER :=0  /* compteur des voyelles */
 m:INTEGER :=0  /* compteur de mots */  
BEGIN
  write(p);
  WHILE (p!="." ) DO
    IF (p="i" or p="o"or p="a" or p="u" or p="y" or p="e") THEN
      V=v++
       else IF (p!=".") THEN
         n=n++
         else
         m=m++
       END_IF
    END_IF
  END_WHILE  
    return write("nombre de voyelles" "nombre de caractères" "nombres de mots")

END